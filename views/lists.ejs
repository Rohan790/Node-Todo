<!-- This include function is used to include the header.ejs template in our code
      <button class="crossbutton" type="submit" name="delete" value=<%= listTitle %>>*</button>
     -->
<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%=listTitle%> </h1>
</div>

<!-- creates a list for todo  -->
<div class="box">
  <!-- <li>Buy Food</li>
      <li>Cook Food</li>
      <li>Eat Food</li> -->
<!-- here same code is used for making more list items with single list using java script code in background.-->
     <% todo_Data.forEach((item)=>{ %>
      <div class="item content">
        <form action="/del" method="post" style="display:flex;">
        <!-- we can remove button tag and make the list deleted when the checkbox get checked by adding this attribute in checkbox
        <p onChange="this.form.submit()">, by using this way u can remove button -->
        <input type="checkbox" onChange="this.form.submit()" class="cbox" name="checkedBox" value="<%= item._id %>">
        <p ondblclick="this.contentEditable='true'" onblur="this.contentEditable='false'" name="text"><%= item.name %></p>
        <input type="hidden" width=0 name="hPageName" value="<%= listTitle %>"></input>
          <!-- <button class="crossbutton" type="submit" name="delete" value="[<%= listTitle %>, <%=item._id %>]">Ã—</button> -->
        </form>
      </div>
    <%}); %>
  <!-- <button type="submit" name="check_button" class="crossbutton" value=<%= listTitle %>></button> -->
  <form class="item" action="/" method="post">
    <input type="text" name="Todo_Item" placeholder="New Item" autocomplete="off" autofocus>
    <button class="add" type="submit" name="button" value=<%= listTitle %>>+</button>
  </form>
</div>

<!-- This is same as header which adds default footer from footer.ejs file to this page -->
<%- include("footer") -%>
